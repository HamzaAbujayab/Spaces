<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundTab"
    tools:context=".Ui.SearchById">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_for_search"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_60sdp"
        android:background="#00000000"
        android:layout_gravity="center"
        app:tabSelectedTextColor="#000000"
        app:tabIndicatorColor="#000000"
        app:tabTextColor="#FDFDFD"
        app:tabIndicatorHeight="0dp"
        app:tabRippleColor="#00000000"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_for_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundViewPager"
        />




</LinearLayout>