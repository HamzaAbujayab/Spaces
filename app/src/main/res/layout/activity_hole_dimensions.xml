<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HoleDimensions">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:stretchColumns="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_HoleDimensions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/textColorInButton"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:titleTextColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:text="طول الصندوق"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_HoleDimensions" />

            <EditText
                android:id="@+id/box_length_hole_dimensions"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_button"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal"
                app:layout_constraintBottom_toBottomOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/textView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="زاوية الرماية"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <EditText
                android:id="@+id/shooting_angle_hole_dimensions"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_button"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="@+id/box_length_hole_dimensions"
                app:layout_constraintStart_toStartOf="@+id/box_length_hole_dimensions"
                app:layout_constraintTop_toTopOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="عرض الصندوق"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <EditText
                android:id="@+id/show_box_hole_dimensions"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_button"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal"
                app:layout_constraintBottom_toBottomOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="@+id/shooting_angle_hole_dimensions"
                app:layout_constraintStart_toStartOf="@+id/shooting_angle_hole_dimensions"
                app:layout_constraintTop_toTopOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="ارتفاع الردم"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <EditText
                android:id="@+id/backfill_height_hole_dimensions"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_button"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                app:layout_constraintEnd_toEndOf="@+id/show_box_hole_dimensions"
                app:layout_constraintStart_toStartOf="@+id/show_box_hole_dimensions"
                app:layout_constraintTop_toTopOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="عرض المدخنة"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <EditText
                android:id="@+id/chimney_width_hole_dimensions"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_button"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintEnd_toEndOf="@+id/backfill_height_hole_dimensions"
                app:layout_constraintStart_toStartOf="@+id/backfill_height_hole_dimensions"
                app:layout_constraintTop_toTopOf="@+id/textView7" />

            <Button
                android:id="@+id/button_hole_dimensions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/shape_button"
                android:text="النتائج"
                android:textColor="@color/textColorInButton"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/output_depth_of_hole_hole_dimensions"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_output"
                android:gravity="center|bottom"
                android:paddingBottom="40dp"
                android:text="الناتج"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/output_hole_length_hole_dimensions"
                app:layout_constraintTop_toBottomOf="@+id/button_hole_dimensions" />

            <TextView
                android:id="@+id/output_hole_length_hole_dimensions"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/shape_output"
                android:gravity="center|bottom"
                android:paddingBottom="40dp"
                android:text="الناتج"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/output_depth_of_hole_hole_dimensions"
                app:layout_constraintEnd_toStartOf="@+id/output_depth_of_hole_hole_dimensions"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/output_depth_of_hole_hole_dimensions" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="عمق الحفرة"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/output_depth_of_hole_hole_dimensions"
                app:layout_constraintStart_toStartOf="@+id/output_depth_of_hole_hole_dimensions"
                app:layout_constraintTop_toTopOf="@+id/output_depth_of_hole_hole_dimensions" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="طول الحفرة"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/output_hole_length_hole_dimensions"
                app:layout_constraintStart_toStartOf="@+id/output_hole_length_hole_dimensions"
                app:layout_constraintTop_toTopOf="@+id/output_hole_length_hole_dimensions" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </TableLayout>
</ScrollView>