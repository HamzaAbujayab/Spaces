<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SearchByName">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_number"
        android:layout_margin="@dimen/_8sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/anamtin_name"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:lottie_autoPlay="true"
            android:layout_alignParentEnd="true"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/TV_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بحث باستخدام الاسم الأول و الأخير"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/anamtin_name"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_3sdp"
            />

        <View
            android:layout_toStartOf="@id/TV_number"
            android:background="#BABABA"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            />

    </RelativeLayout>

    <EditText
        android:id="@+id/first_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_8sdp"
        android:hint="الاسم الاول"
        android:layout_below="@id/layout_number"
        android:background="@drawable/circul_border_solid"
        android:padding="@dimen/_10sdp"
        />

    <EditText
        android:id="@+id/father_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_8sdp"
        android:hint="الاسم الأب"
        android:layout_below="@id/first_name"
        android:background="@drawable/circul_border_solid"
        android:padding="@dimen/_10sdp"
        />

    <EditText
        android:id="@+id/grandfather_name"
        android:layout_width="match_parent"
        android:hint="الاسم الجد"
        android:layout_below="@id/father_name"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/circul_border_solid"
        android:padding="@dimen/_10sdp"
        />

    <EditText
        android:id="@+id/last_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_8sdp"
        android:hint="الاسم العائلة"
        android:layout_below="@id/grandfather_name"
        android:background="@drawable/circul_border_solid"
        android:padding="@dimen/_10sdp"
        />

    <Button
        android:id="@+id/btn_search_by_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="أبحث"
        android:layout_below="@id/last_name"
        android:textColor="#FFF"
        android:background="@drawable/btn_shap_login"
        android:layout_margin="@dimen/_10sdp"
        />
</RelativeLayout>

</ScrollView>