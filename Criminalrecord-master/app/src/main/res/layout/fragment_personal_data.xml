<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.PersonalData">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_number"
            android:layout_margin="@dimen/_8sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/anamtin_personal"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                app:lottie_autoPlay="true"
                android:layout_alignParentEnd="true"
                app:lottie_loop="true" />


            <TextView
                android:id="@+id/TV_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بيانات الهوية"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/anamtin_personal"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_3sdp"
                />

            <View
                android:layout_toStartOf="@id/TV_number"
                android:background="#BABABA"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_person_data"
            android:layout_width="wrap_content"
            android:layout_below="@id/layout_number"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_user_data_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اسماعيل محمد\عبدالمجيد الخليلي"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_15sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/colorSplashName"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_below="@id/name_user_data_person"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/city_user_data_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    android:text="غير مسجل" />

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@drawable/ic_person_pin_circle_black_24dp" />

                <TextView
                    android:id="@+id/id_user_data_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    android:text="1562354" />

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_margin="@dimen/_3sdp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_personal"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/person"/>

                <TextView
                    android:id="@+id/is_wanted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مطلوب"
                    />
            </LinearLayout>



        </RelativeLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_person_data">

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:text="الجنس"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_4sdp"

                    android:text="ذكر"/>
                <View
                    android:layout_gravity="right"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#878787"/>

                <TextView
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textSize="@dimen/_16sdp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="اسم الام"/>
                <TextView
                    android:id="@+id/name_mather"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="سعاد"/>
                <View
                    android:layout_gravity="right"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#878787"/>
                <TextView
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textSize="@dimen/_16sdp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="الشارع"/>
                <TextView
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_height="wrap_content"
                    android:text="الثلاثيني"/>
                <View
                    android:layout_gravity="right"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#878787"/>
                <TextView
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textSize="@dimen/_16sdp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="رقم المربع"/>
                <TextView
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>

            </LinearLayout>

            <LinearLayout
             android:layout_width="0dp"
             android:orientation="vertical"
             android:layout_weight="1"
             android:layout_height="fill_parent">
                <TextView
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:text="تاريخ الميلاد"/>
                <TextView
                    android:id="@+id/date_Of_Birth_user"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01-10-1999"/>
                <View
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_gravity="right"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#878787"/>

                <TextView
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:text="الحالة الاجتماعية"/>
                <TextView

                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="متعدد الزوجات"/>
                <View
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_gravity="right"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#878787"/>
                <TextView
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_gravity="right"
                    android:textSize="@dimen/_16sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="الديانة"/>
                <TextView
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مسلم"/>
                <View
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_gravity="right"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#878787"/>
                <TextView
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textSize="@dimen/_16sdp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="رقم المنزل"/>
                <TextView
                    android:id="@+id/number_home"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</ScrollView>