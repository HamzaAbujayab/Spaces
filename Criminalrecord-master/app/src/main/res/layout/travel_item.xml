<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/circul_border_solid"
    android:layout_margin="@dimen/_3sdp"
    >

    <TextView
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/type_of_travel"
        android:background="#D54343"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="wrap_content"
        android:text="وصول"
        android:textAlignment="center"
        android:padding="@dimen/_15sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:layout_marginEnd="@dimen/_8sdp"
        />
        <View
            android:id="@+id/view_travel"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="#000000"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_toStartOf="@+id/type_of_travel"
            android:layout_centerVertical="true"
            />

    <TextView
        android:id="@+id/name_crossing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="معبر ايرز"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/view_travel"
        android:layout_margin="@dimen/_15sdp"

        />

    <TextView
        android:id="@+id/reason_for_visit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="زيارد الاقارب"
        android:layout_below="@id/name_crossing"
        android:layout_toStartOf="@id/view_travel"
        android:layout_marginEnd="@dimen/_15sdp"
        />
<TextView
    android:layout_centerVertical="true"
    android:id="@+id/date_of_visit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="15/18/2020"
    android:layout_marginStart="@dimen/_8sdp"
    />

</RelativeLayout>